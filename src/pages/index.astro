---
import Layout from '../layouts/Base.astro';
import Cards from '../components/Cards.astro';
import { getOffres } from '../js/backend.mjs';
const offres = await getOffres();
---

<Layout titre="Accueil">
	<div class="flex justify-center text-4xl mt-10">
		<h1 class="font-bold uppercase text-purple-400">Geetix's Home</h1>
	</div>
	<div class="home__offre">
		<h2 class="subtitle ml-10 mt-16 font-bold uppercase text-purple-400">Vos favoris :</h2>
		<div x-show="showFavorites" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mx-10 mt-10">
			{offres.map((item) => item.favori && <Cards {...item} class="list-item" />)}
		</div>
	</div>
	
</Layout>