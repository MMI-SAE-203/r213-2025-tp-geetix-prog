const offres = [
    {
        "adresse": "2821 Lake Sevilla, Palm Harbor, TX",
        "favori": true,
        "id": "64l3n8nar836i5j",
        "nbChambres": 4,
        "nbSdb": 2,
        "nomMaison": "Beverly Springfield",
        "prix": 2700,
        "surface": 45,
        "imgUrl": "image1.png"
    },
    {
        "adresse": "2699 Green Valley, Highland Lake",
        "favori": true,
        "id": "lo831zeg10hpm9y",
        "nbChambres": 4,
        "nbSdb": 2,
        "nomMaison": "Palm Harbor",
        "prix": 2095,
        "surface": 42,
        "imgUrl": "image2.png"
    },
    {
        "adresse": "909 Woodland St, Michigan, IN",
        "favori": false,
        "id": "s1zuhj19x8eb242",
        "nbChambres": 4,
        "nbSdb": 3,
        "nomMaison": "Faulkner Ave",
        "prix": 4550,
        "surface": 80,
        "imgUrl": "image3.png"
    }
]

---

<Layout titre="offres">
    <div class="flex justify-center text-4xl mt-10">
        <h1 class="font-bold uppercase text-purple-400">Nos offres</h1>
    </div>
    <div class="flex columns-3 justify-between mt-20 mx-52">
        { offres.map((item) => 
                <div class="card border w-80 h-80 shadow-black border-radius rounded-xl bg-slate-200 px-5 py-5">
                    <h2 class="font-bold text-lg mb-6">{item.nomMaison}</h2>
                    <p class="mb-2">Adresse : {item.adresse}</p>
                    <p class="mb-2">Surface : {item.surface} m²</p>
                    <p class="mb-2">Nombre de salles de bains : {item.nbSdb}</p>
                    <p class="mb-2">Nombre de chambres : {item.nbChambres}</p>
                    <p class="mb-5">Prix : {item.prix} €</p>
                    <p>Favori : <span class={item.favori ? 'text-green-500 font-bold' : 'text-red-500 font-bold'}>{item.favori ? 'Oui' : 'Non'}</span></p>
                </div>
            )
        }
    </div>
</Layout>